<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_screen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/image_gallery_horizontal_margin"
    android:paddingRight="@dimen/image_gallery_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wssholmes.stark.photos.MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/home_screen_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/home_screen_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>